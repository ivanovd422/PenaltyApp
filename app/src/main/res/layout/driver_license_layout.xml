<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"
        />


    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driver_license_text"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/textColor"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/auto_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_tv"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="50 АА 101101"
        android:theme="@style/EditTextStyle"
        android:textSize="20sp"
        android:inputType="textCapSentences"
        android:maxLines="1"
        android:digits="abekmhopctyx ABEKMHOPCTYX авекмнорстух АВЕМНОРСТУХ 0123456789"
        />

    <Button
        android:id="@+id/continue_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ДАЛЕЕ"
        android:textColor="@color/whiteColor"
        android:background="@color/orangeColor"
        android:layout_below="@+id/auto_et"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"

        />

    <Button
        android:id="@+id/skip_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ПРОПУСТИТЬ"
        android:textColor="@color/lightColor"
        android:background="@color/transparent"
        android:layout_below="@+id/auto_et"
        android:layout_toStartOf="@+id/continue_btn"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"


        />




</RelativeLayout>